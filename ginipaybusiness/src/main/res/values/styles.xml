<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="GiniPay" />

    <style name="Root" />

    <style name="Root.GiniPay" />

    <style name="Root.GiniPay.PaymentInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeColor">@color/gpb_input_box_stroke_color</item>
        <item name="boxBackgroundColor">@color/gpb_input_box_background_color</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="GiniPay.PaymentInputLayoutStyle" parent="Root.GiniPay.PaymentInputLayoutStyle" />

    <style name="Root.GiniPay.PaymentInputStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="GiniPay.PaymentInputStyle" parent="Root.GiniPay.PaymentInputStyle" />

    <style name="Root.GiniPay.PaymentInputStyle.Amount">
        <item name="android:gravity">end</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <style name="GiniPay.PaymentInputStyle.Amount" parent="Root.GiniPay.PaymentInputStyle.Amount" />

    <style name="Root.GiniPay.CurrencyStyle">
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="GiniPay.CurrencyStyle" parent="Root.GiniPay.CurrencyStyle" />

    <style name="GiniPay.DocumentPagerStyle" />

    <style name="GiniPay.DocumentListStyle" />

    <style name="GiniPay.PagePhotoStyle" />

    <style name="Root.GiniPay.PageIndicatorStyle">
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="GiniPay.PageIndicatorStyle" parent="Root.GiniPay.PageIndicatorStyle" />

    <style name="Root.GiniPay.PaymentDetailsCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gpb_payment_details_background</item>
        <item name="elevation">4dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="GiniPay.PaymentDetailsCard" parent="Root.GiniPay.PaymentDetailsCard" />

    <style name="Root.GiniPay.BankButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:drawableLeft">@drawable/ic_bank</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="layout_constraintHorizontal_weight">.4</item>
    </style>

    <style name="GiniPay.BankButtonStyle" parent="Root.GiniPay.BankButtonStyle" />

    <style name="Root.GiniPay.PaymentButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/gpb_payment_button_spacing</item>
        <item name="layout_constraintHorizontal_weight">.6</item>
    </style>

    <style name="GiniPay.PaymentButtonStyle" parent="Root.GiniPay.PaymentButtonStyle" />

    <style name="Root.GiniPay.PaymentButtonProgressStyle">
        <item name="android:padding">8dp</item>
        <item name="android:translationZ" tools:targetApi="lollipop">100dp</item>
    </style>

    <style name="GiniPay.PaymentButtonProgressStyle" parent="Root.GiniPay.PaymentButtonProgressStyle" />

</resources>